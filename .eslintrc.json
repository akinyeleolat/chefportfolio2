{
    "env": {
        "node":true,
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier", "prettier/react"
     ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "react/jsx-filename-extension": [
          1,
          {
            "extensions": [".js", "jsx"]
          }
        ],
        "prettier/prettier": "error",
        "max-len": ["error", 80]
      },
      "settings": {
        "import/resolver": {
          "webpack": {
            "config": "./config/webpack-common-config.js"
          }
        }
      }
}
